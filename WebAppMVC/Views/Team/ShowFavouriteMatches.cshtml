@model IEnumerable<WebAppMVC.Application.FavouriteTeamsUser.FavouriteTeamsUserDto>

@{
    ViewData["Title"] = "ShowFavouriteMatches";
}

<h1>Favourite Matches</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Nr
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FootballTeamId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FootballTeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetingsWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeagueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeagueId)
            </th>
            <th></th>
        </tr>
    </thead>
    @{
        int rowNo = 0;
    }
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @(rowNo += 1)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FootballTeamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FootballTeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingsWon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeagueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeagueId)
            </td>
            <td>
                    <a class="btn btn-primary" onclick="DeleteFavouriteTeam('@item.Id')">Delete</a>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.css"> </script>
            </td>
        </tr>
}
    </tbody>
</table>


<p>
    <a class="btn btn-primary" asp-controller="Team" asp-action="Index">Return Teams</a>
</p>


             @section Scripts
    {
    <script>

        function DeleteFavouriteTeam(id) {

            var postData = {
                'Id': id,
            };
            $.ajax({
                dataType: 'json',
                type: "DELETE",
                url: `/Team/Delete`,
                data: postData,
                success: function (res) {
                    console.log(res)
                    $('#staticBackdrop').modal()
                }, 
            });

            window.location.reload();
        }
    </script>
    }