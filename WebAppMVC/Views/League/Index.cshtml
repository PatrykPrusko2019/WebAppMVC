@model IEnumerable<WebAppMVC.Application.League.LeagueDto>

@{
    ViewData["Title"] = "Welcome to the Football Leagues";
}

<h1>Football Leagues</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="card-body">
                <h4 class="card-title">@item.Id</h4>
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.TeamNames</h6>
                <a class="btn btn-primary" asp-controller="League" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-outline-secondary" asp-controller="League" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

            </div>
        </div>
    }
</div>
